<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <!--SurfaceView-->
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--自定义扫码界面-->
    <com.iqos.qrscanner.widget.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scan_line_color="#00FF00"
        app:scan_line_move_speed="3"
        app:scan_rect_corner_color="#00FF00"
        app:scan_rect_corner_length="20dp"
        app:scan_rect_corner_width="3dp"
        app:scan_text_above_rect="false"
        app:scan_tip_text="把二维码放入取景框即可自动扫描"
        app:scan_tip_text_size="14sp"
        app:scan_view_title_text="扫描二维码" />
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/app_scan_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="扫描二维码"
        app:titleTextColor="@android:color/white" />

</RelativeLayout>
